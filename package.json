{
  "name": "re",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "effect-language-service patch",
    "test": "bun run --filter '*' test",
    "test:watch": "bun run --filter '*' test:watch",
    "typecheck": "bun run --filter '*' typecheck",
    "desktop:dev": "bun run --filter @re/desktop dev",
    "desktop:typecheck": "bun run --filter @re/desktop typecheck",
    "desktop:test": "bun run --filter @re/desktop test",
    "desktop:build": "bun run --filter @re/desktop build",
    "desktop:package": "bun run --filter @re/desktop package",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check ."
  },
  "devDependencies": {
    "@effect/language-service": "^0.64.1",
    "@types/bun": "latest",
    "add": "^2.0.6",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.38.0",
    "typescript": "^5.9.3"
  }
}
